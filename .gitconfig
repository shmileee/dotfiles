[core]
	editor = vim
	excludesfile = ~/.gitignore_global
[color "diff"]
	whitespace = red reverse
[include]
	path = ~/.gitconfig.user
[include]
	path = ~/.gitconfig.proxy
[includeIf "gitdir:~/dotfiles/**"]
	path = ~/.gitconfig.private
[includeIf "gitdir:~/projects/**"]
	path = ~/.gitconfig.private
[includeIf "gitdir:~/work/**"]
	path = ~/.gitconfig.work
[credential]
	helper = store
[pull]
	rebase = false
	default = current
[init]
	defaultBranch = main
[push]
	default = current
